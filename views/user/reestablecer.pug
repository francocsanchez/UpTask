doctype html
html(lang="en")
    head
        include ../partials/head
    body.login
        .contenedor-formulario 
            h1 Restablecer contrase√±a

            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method='POST' action='/reestablecer')
                .campo 
                    label(for="email") Email: 
                    input(type="email" name="email" placeholder="Ingrese un email" value= email) 
                .campo.enviar 
                    input.boton(type="submit" value="Reestablecer")
                .campo.acciones
                    a(href="/iniciar-sesion") Iniciar sesion